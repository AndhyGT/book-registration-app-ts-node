<div class="col-md-5 mx-auto">
    <div class="card card-body shadow">
        <form action="/books/add" method="POST">
            <div class="mb-3">
                <input type="text" name="title" class="form-control" placeholder="Book Title" autofocus>
            </div>
            <div class="mb-3">
                <input type="text" name="author" class="form-control" placeholder="Author" required>
            </div>
            <div class="mb-3">
                <input type="text" name="isbn" placeholder="ISBN" class="form-control"
                    pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])">
            </div>
            <button class="btn btn-primary w-100">
                Save
            </button>
        </form>
    </div>
</div>